@*
@model List<Platzi_ASP_NET_Core.Models.ObjetoEscuelaBase>
*@

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Id</th>
        </tr>
        <tbody>
@foreach (var obj in Model)
{
    <tr>
        <td>@obj.Nombre</td>
        <td>@obj.Id</td>
        <td><a class="btn btn-primary" asp-controller="@obj.GetType()" asp-action="Update" asp-route-id="@obj.Id" >Editar</a></td>
        <td><a class="btn btn-primary" asp-controller="@obj.GetType()" asp-action="Delete" asp-route-id="@obj.Id">Eliminar</a></td>
    </tr>
}
        </tbody>
    </thead>
</table>
